{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true, 
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "routes/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
